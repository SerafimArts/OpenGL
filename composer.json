{
    "name": "serafim/ffi-opengl",
    "type": "library",
    "description": "OpenGL and Vulkan FFI bindings",
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "ext-ffi": "*",
        "serafim/ffi-loader": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Serafim\\OpenGL\\": "src"
        }
    },
    "require-dev": {
        "ext-json": "*",
        "serafim/ffi-sdl": "^1.0",
        "serafim/ffi-ide-helper": "^1.0",
        "phpunit/phpunit": "~9.0",
        "symfony/var-dumper": "~5.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Serafim\\OpenGL\\Example\\": "example",
            "Serafim\\OpenGL\\Tests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
